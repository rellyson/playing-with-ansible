---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    max: 3
    level: error
  hyphens:
    level: error
  key-duplicates: enable
  new-line-at-end-of-file: disable
  line-length:
    max: 300
  new-lines: disable
  trailing-spaces: disable
  truthy:
    allowed-values:
      - "yes"
      - "no"
      - "true"
      - "false"
